rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && 
        exists(/databases/$(database)/documents/employees/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/employees/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    // Users can only access their own data
    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }
    
    // Employees - employees can read their own data, admin can read/write all
    match /employees/{employeeId} {
      allow read: if isAuthenticated() && (isOwner(employeeId) || isAdmin());
      allow write: if isAdmin();
    }
    
    // Departments - all authenticated users can read, admin can write
    match /departments/{departmentId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // KPIs - all authenticated users can read, admin can write
    match /kpis/{kpiId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // KPI Records - employees can read/write their own, admin can read/write all
    match /kpiRecords/{recordId} {
      allow read, write: if isAuthenticated() && 
        (resource.data.employeeId == request.auth.uid || isAdmin());
    }
    
    // Reports - employees can read/write their own, admin can read/write all
    match /reports/{reportId} {
      allow read, write: if isAuthenticated() && 
        (resource.data.employeeId == request.auth.uid || isAdmin());
    }
    
    // Notifications - users can read their own, admin can write
    match /notifications/{notificationId} {
      allow read: if isAuthenticated() && 
        (resource.data.userId == request.auth.uid || isAdmin());
      allow write: if isAdmin();
    }
    
    // Notification Settings - users can read/write their own
    match /notificationSettings/{userId} {
      allow read, write: if isOwner(userId);
    }
    
    // Notification Templates - admin only
    match /notificationTemplates/{templateId} {
      allow read, write: if isAdmin();
    }
    
    // Reward System Collections - admin only
    match /rewardPrograms/{programId} {
      allow read, write: if isAdmin();
    }
    
    match /positionConfigs/{configId} {
      allow read, write: if isAdmin();
    }
    
    match /employeePoints/{pointId} {
      allow read, write: if isAdmin();
    }
    
    match /rewardCalculations/{calculationId} {
      allow read, write: if isAdmin();
    }
    
    match /metricData/{dataId} {
      allow read, write: if isAdmin();
    }
    
    // Advanced KPI Features - admin only
    match /kpiFormulas/{formulaId} {
      allow read, write: if isAdmin();
    }
    
    match /measurementCycles/{cycleId} {
      allow read, write: if isAdmin();
    }
    
    match /kpiCycles/{cycleId} {
      allow read, write: if isAdmin();
    }
    
    // Bulk Import - admin only
    match /bulkImportTemplates/{templateId} {
      allow read, write: if isAdmin();
    }
    
    match /bulkImportResults/{resultId} {
      allow read, write: if isAdmin();
    }
    
    // Employee Self-Service Collections
    match /selfUpdateRequests/{requestId} {
      allow read, write: if isAuthenticated() && 
        (resource.data.employeeId == request.auth.uid || isAdmin());
    }
    
    match /performanceBreakdowns/{breakdownId} {
      allow read: if isAuthenticated() && 
        (resource.data.employeeId == request.auth.uid || isAdmin());
      allow write: if isAdmin();
    }
    
    match /performancePredictions/{predictionId} {
      allow read: if isAuthenticated() && 
        (resource.data.employeeId == request.auth.uid || isAdmin());
      allow write: if isAdmin();
    }
    
    match /selfServiceSettings/{employeeId} {
      allow read, write: if isOwner(employeeId);
    }
    
    match /performanceInsights/{insightId} {
      allow read: if isAuthenticated() && 
        (resource.data.employeeId == request.auth.uid || isAdmin());
      allow write: if isAdmin();
    }
    
    // Scheduled Reports - admin only
    match /scheduledReports/{reportId} {
      allow read, write: if isAdmin();
    }
    
    match /reportExecutions/{executionId} {
      allow read, write: if isAdmin();
    }
    
    match /reportTemplates/{templateId} {
      allow read, write: if isAdmin();
    }
    
    // System Collections - admin only
    match /performanceMetrics/{metricId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    match /errorLogs/{logId} {
      allow read, write: if isAdmin();
    }
    
    match /performanceReports/{reportId} {
      allow read, write: if isAdmin();
    }
    
    // Alert System - admin only
    match /alertRules/{ruleId} {
      allow read, write: if isAdmin();
    }
    
    match /alerts/{alertId} {
      allow read, write: if isAdmin();
    }
    
    // API Integrations - admin only
    match /apiIntegrations/{integrationId} {
      allow read, write: if isAdmin();
    }
  }
}